<!-- basic tuning -->
body{width:100%;display:block}
body{-moz-osx-font-smoothing:grayscale;-webkit-font-smoothing:antialiased}
.center{text-align:center}
.material-icons.md-18{font-size:18px}
.material-icons.md-24{font-size:24px}
.material-icons.md-36{font-size:36px}
.material-icons.md-48{font-size:48px}
.monospace{font-family: monospace, monospace}

<!-- disable Google Touch to Search feature -->
body {-webkit-user-select: none}
nav {-webkit-user-select: none}

<!-- bottom scroll progress bar -->
.progress-container {width:100%;height:8px;position:fixed !important}
.progress-bar {height:8px;background:#4caf50;width:0%}

<!-- helpers -->
.small-text{font-size:0.5rem!important}
.medium-text{font-size:1rem!important}
.large-text{font-size:2rem!important}

.alias{cursor:alias}
.copy{cursor:copy}
.help{cursor:help}
.hover{cursor:pointer}

.bold{font-weight:700}
.capitalize{text-transform:capitalize}
.italic{font-style:italic}
.lower{text-transform:lowercase}
.overline{text-decoration:line-through}
.truncate{overflow:hidden;white-space:nowrap;text-overflow:ellipsis}
.underline{text-decoration:underline}
.upper{text-transform:uppercase}
